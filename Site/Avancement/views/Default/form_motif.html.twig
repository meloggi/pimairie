{# app/Resources/views/Default/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="../../favicon.ico">

  <title>Demande de logement social-Mairie de Villers-lès-Nancy</title>

  {% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap.min.css') }}">
  <link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap.css') }}">
  <link rel="stylesheet" href="{{ asset('css/bootstrap/css/accueil.css') }}">
  <link rel="stylesheet" href="{{ asset('css/bootstrap/css/form_motif.css') }}">
  {% endblock %}

</head>

<body>

  <div class="container">
    <div id="logo">
      <img class="col-xs-2 col-sm-2 col-md-2 col-lg-2 "  src="{{ asset('images/logo-villers.png') }}" >




      <div class="connexion">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
        <a href="{{ path('fos_user_security_logout') }}" class="btn btn-lg btn-secondary" role="button">
          {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
        </a>
        {% else %}
        <a href="{{ path('fos_user_security_login') }}" class="btn btn-lg btn-secondary" role="button">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-lg btn-secondary" role="button">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
        <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-lg btn-secondary" role="button" style="margin-right: 20px">Mot de passe perdu?</a>
        {% endif %}
      </div>

      {% if app.request.hasPreviousSession %}
      {% for type, messages in app.session.flashbag.all() %}
      {% for message in messages %}
      <div class="flash-{{ type }}">
        {{ message }}
      </div>
      {% endfor %}
      {% endfor %}
      {% endif %}

      <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
      </div> 
    </div>

    <div id="chateau">
      <img class="col-xs-12 col-sm-9 col-md-15 col-lg-10 col-lg-offset-1"  src="{{ asset('images/chateau.jpg') }}" >
    </div>
    <ul class="main_menu">
      <li class="main_menu"><a href="{{ path('homepage') }}">Home</a></li>
      <li class="main_menu"><a href="{{ path('form1') }}">Créer une demande</a>
        <li class="main_menu"><a href="#">Accéder à ma demande</a>
          <li class="main_menu"><a>Contact</a></li>
        </li>
      </ul> 

      <div class="well">
        <ul class="nav nav-tabs">
          <li><a id="nonactif" class="onglet" href="{{ path('form2') }}" data-toggle="tab">Demande</a></li>
          <li><a id="nonactif" class="onglet" href="{{ path('form_pro') }}" data-toggle="tab">Situation Professionnelle</a></li>
          <li><a id="nonactif" class="onglet" href="{{ path('form_ressource') }}" data-toggle="tab">Ressources actuelles</a></li>
          <li><a id="actif" class="onglet-actif" href="#home" data-toggle="tab">Motif et logement recherché</a></li>
          <li><a id="nonactif" class="onglet" href="{{ path('form_justificatif') }}" data-toggle="tab">Téléchargement</a></li>
        </ul>
        <div id="myTabContent" class="tab-content">
          <div class="tab-pane active in" id="home">
            <form action="{{path('form_justificatif')}}" method="post" role="form">
              <div class="info">
                <h1>Caractéristiques du logement recherché</h1>
                <p>
                  <label class="labelsituation">Situation de logement</label>
                  <input class="input-xlarge" id="demande_situation" type="text"  name="demande[situation]" ></input>
                </p>
                <p>
                  <label class="labelparking">Parking</label>
                  <input class="input-xlarge" id="demande_parking" type="text"  name="demande[parking]" ></input>
                </p>
                <p>
                  <label class="labeltype">Type de logement</label>
                  <input class="input-xlarge" id="demande_typelogement" type="text"  name="demande[typelogement]" ></input>
                </p>
                <p>
                  <label class="labelrdc">Rez-de-chaussée accepté</label>
                  <input class="input-xlarge" id="demande_rdc" type="text"  name="demande[rdc]" ></input>
                </p>
                <p>
                  <label class="labelascenseur">Logement sans ascenseur accepté</label>
                  <input class="input-xlarge" id="demande_ascenseur" type="text"  name="demande[ascenseur]" ></input>
                </p>

                <p>
                  <label class='labelmontantmaxi'>Montant maximum de la dépense (charge+loyer)</label>
                  <input class="input-xlarge" id="demande_montantmaxi" type="text"  name="demande[montantmaxi]"></input>
                </p>

                

              </div>

              <div class="placement">
                <a href="{{ path('form_ressource') }}" class="btn btn-danger btn-outline"/>Précédent</a>
                <input type="submit" class="btn btn-success btn-outline" value="Valider" style="margin-bottom: 50px; margin-top: 20px" href="{{ path('form_justificatif') }}" />
              </div>
            </form>
          </div> 
        </div> 
      </div>
      
    </div>


    


  </body>
  </html>
