{% extends "sdzBikindBundle::layoutbikind.html.twig" %}
 
{% block title %}
  {{ parent() }}
{% endblock %}
 
{% block sdzbikind_body %}
<h2>{{ action }} </h2>
<div class="row">
  <div class="span10">
    <div class="well">
      {{ form_start(form) }}
        {{ form_errors(form) }}
         
          <div class="row">
            <div class="span3">
              {{ form_label (form.pays, "Pays") }}
              {{ form_widget(form.pays, {'attr' : {'class' : 'paysclass span3'}}) }}
              {{ form_errors(form.pays) }}
            </div>
            <div class="span3">
              {{ form_label (form.region, "Region") }}
              {{ form_widget(form.region, {'attr' : {'class' : 'regionclass span3'}}) }}
              {{ form_errors(form.region) }}
            </div>
            <div class="span3">
              {{ form_label (form.ville, "Ville") }}
              {{ form_widget(form.ville, {'attr' : {'class' : 'villeclass span3'}}) }}
              {{ form_errors(form.ville) }}
            </div>
          </div>
    
        <input type="submit" class="btn btn-info btn-block btn-small" />
    {{ form_end(form) }}   
  </div>
</div>
 
{% endblock %}