                </div>

                <div class="form-group">
                    <label for="floor">{{ form_label(form.floor) }}</label>
                    <input class="form-control" id="housing_floor" type="number" required="required" name="housing[floor]" value={{housing.floor}}></input>
                    <p class="help-block">{{ form_errors(form.floor) }}</p>
                </div>

                <div class="form-group">
                    <label for="rent">{{ form_label(form.rent) }}</label>
                    <input class="form-control" id="housing_rent" type="number" required="required" name="housing[rent]" value={{housing.rent}}></input>
                    <p class="help-block">{{ form_errors(form.rent) }}</p>
                </div>

                <div class="form-group">
                    <label for="numero">{{ form_label(form.numero) }}</label>
                    <input class="form-control" id="housing_numero" type="number" required="required" name="housing[numero]" value={{housing.numero}}></input>
                    <p class="help-block">{{ form_errors(form.numero) }}</p>
                </div>

                <div class="form-group">
                <label>{{ form_label(form.contingent) }}</label>
                    <select class="form-control" id="housing_contingent" type="text" required="required" name="housing[contingent]">
                          {% if housing.contingent == "Oui" %}
                            <option selected="selected">Oui</option>
                            <option>Non</option>
                          {%endif%}
                          {% if housing.contingent == "Non" %}
                            <option>Oui</option>
                            <option selected="selected">Non</option>
                          {%endif%}
                    </select>
                  <p class="help-block">{{ form_errors(form.contingent) }}</p> 
