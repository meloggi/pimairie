                        <option>3F - EST HABITAT CONSTRUCTION</option>
                        <option selected="selected">MEURTHE ET MOSELLE HABITAT</option>
                        <option>OFFICE PUBLIC DE L HABITAT</option>
                        <option>SOCIETE LORRAINE D HABITAT</option>
                        <option>PRESENCE HABITAT</option>
                        <option>NOUVEAU LOGIS DE L EST</option>
                        <option>ICF NORD EST</option>
                        <option>Autre</option>
                      {%endif%}
                      {% if housing.bailleur == "OFFICE PUBLIC DE L HABITAT" %}
                        <option>BATIGERE</option>
                        <option>3F - EST HABITAT CONSTRUCTION</option>
                        <option>MEURTHE ET MOSELLE HABITAT</option>
                        <option selected="selected">OFFICE PUBLIC DE L HABITAT</option>
                        <option>SOCIETE LORRAINE D HABITAT</option>
                        <option>PRESENCE HABITAT</option>
                        <option>NOUVEAU LOGIS DE L EST</option>
                        <option>ICF NORD EST</option>
                        <option>Autre</option>
                      {%endif%}
                      {% if housing.bailleur == "SOCIETE LORRAINE D HABITAT" %}
                        <option>BATIGERE</option>
                        <option>3F - EST HABITAT CONSTRUCTION</option>
                        <option>MEURTHE ET MOSELLE HABITAT</option>
                        <option>OFFICE PUBLIC DE L HABITAT</option>
                        <option selected="selected">SOCIETE LORRAINE D HABITAT</option>
                        <option>PRESENCE HABITAT</option>
                        <option>NOUVEAU LOGIS DE L EST</option>
                        <option>ICF NORD EST</option>
                        <option>Autre</option>
                      {%endif%}
                      {% if housing.bailleur == "PRESENCE HABITAT" %}
                        <option>BATIGERE</option>
                        <option>3F - EST HABITAT CONSTRUCTION</option>
                        <option>MEURTHE ET MOSELLE HABITAT</option>
                        <option>OFFICE PUBLIC DE L HABITAT</option>
                        <option>SOCIETE LORRAINE D HABITAT</option>
