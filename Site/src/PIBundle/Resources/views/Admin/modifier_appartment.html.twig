          <h1>Modifier les informations du logement</h1>
          </div>
          <div class="row">
          <div class="col-lg-12">
            <form action="{{ path('platform_admin_modifier_appartment', { 'id': housing.id }) }}" method="post" role="form">
               <div class="form-group">
                    <label for="location">{{ form_label(form.location) }}</label>
                    <select class="form-control" id="housing_location" type="text" required="required" name="housing[location]">
                      {% if housing.location == "Villers-centre" %}
                        <option selected="selected">Villers-centre</option>
                        <option>Villers-bas</option>
                        <option>Clairlieu</option>
                        <option>Autre</option>
                      {%endif%}
                      {% if housing.location == "Villers-bas" %}
                        <option>Villers-centre</option>
                        <option selected="selected">Villers-bas</option>
                        <option>Clairlieu</option>
                        <option>Autre</option>
                      {%endif%}
                      {% if housing.location == "Clairlieu" %}
                        <option>Villers-centre</option>
                        <option>Villers-bas</option>
                        <option selected="selected">Clairlieu</option>
                        <option>Autre</option>
                      {%endif%}
                      {% if housing.location == "Autre" %}
                        <option>Villers-centre</option>
                        <option>Villers-bas</option>
                        <option>Clairlieu</option>
                        <option selected="selected">Autre</option>
                      {%endif%}
                    </select>
                    <p class="help-block">{{ form_errors(form.location) }}</p>
                </div>

                <div class="form-group">
                    <label for="bailleur">{{ form_label(form.bailleur) }}</label>
                    <select class="form-control" id="housing_bailleur" type="text" required="required" name="housing[bailleur]">
                      {% if housing.bailleur == "BATIGERE" %}
