                    <input class="form-control" id="housing_adress" type="text" required="required" name="housing[adress]" value={{housing.adress}}></input>
                    <p class="help-block">{{ form_errors(form.adress) }}</p>
                </div>

                <div class="form-group">
                    <label for="residence">{{ form_label(form.residence) }}</label>
                    <input class="form-control" id="housing_residence" type="text" required="required" name="housing[residence]" value={{housing.residence}}></input>
                    <p class="help-block">{{ form_errors(form.residence) }}</p>
                </div>

                <div class="form-group">
                    <label for="type">{{ form_label(form.type) }}</label>
                    <select class="form-control" id="housing_type" type="text" required="required" name="housing[type]">
                      {% if housing.type == "F1" %}
                        <option selected="selected">F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if housing.type == "F1 bis" %}
