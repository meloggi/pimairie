                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if housing.type == "F5" %}
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option selected="selected">F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if housing.type == "F6" %}
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option selected="selected">F6</option>
                      {%endif%}
                    </select>
