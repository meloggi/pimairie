        <div class="container">
          <div class="row">
          <a type="button" class="btn btn-success" href="{{ path('platform_admin_demandeur') }}"><i class="fa fa-chevron-left"></i> Retour</a>
          <h1>Modifier les informations de la demande</h1>
          </div>
          <div class="row">
          <div class="col-lg-12">
            <form action="{{ path('platform_admin_modifier_demande', { 'id': demand.id }) }}" method="post" role="form" novalidate>

              <div class="form-group">
                    <label for="demand_salary">Nom: </label>
                    <input class="form-control" id="demand_lastName" type="text" required="required" name="demand[lastName]" value={{demand.lastName}}></input>
                    <p class="help-block">{{ form_errors(form.lastName) }}</p>
              </div>

              <div class="form-group">
                    <label for="demand_salary">Prénom: </label>
                    <input class="form-control" id="demand_firstName" type="text" required="required" name="demand[firstName]" value={{demand.firstName}}></input>
                    <p class="help-block">{{ form_errors(form.firstName) }}</p>
              </div>

              <div class="form-group">
                    <label for="demand_email">Email: </label>
                    <input class="form-control" id="demand_email" type="tetx" required="required" name="demand[email]" value={{demand.email}}></input>
                    <p class="help-block">{{ form_errors(form.salary) }}</p>
              </div>

              <div class="form-group">
                    <label for="demand_salary">Salaire: </label>
                    <input class="form-control" id="demand_salary" type="number" required="required" name="demand[salary]" value={{demand.salary}}></input>
                    <p class="help-block">{{ form_errors(form.salary) }}</p>
              </div>

              <div class="form-group">
                    <label for="demand_locationVillersCentre">Localisation à Villers-centre: </label>
                    <select class="form-control" id="demand_locationVillersCentre" type="text" required="required" name="demand[locationVillersCentre]">
                      {% if demand.locationVillersCentre == "Oui" %}
                        <option selected="selected">Oui</option>
                        <option>Non</option>
                      {%endif%}
                      {% if demand.locationVillersCentre == "Non" %}
                        <option>Oui</option>
                        <option selected="selected">Non</option>
                      {%endif%}
                    </select>
                    <p class="help-block">{{ form_errors(form.locationVillersCentre) }}</p>
              </div>

              <div class="form-group">
                    <label for="demand_locationVillersBas">Localisation à Villers-bas: </label>
                    <select class="form-control" id="demand_locationVillersBas" type="text" required="required" name="demand[locationVillersBas]">
                      {% if demand.locationVillersBas == "Oui" %}
                        <option selected="selected">Oui</option>
                        <option>Non</option>
                      {%endif%}
                      {% if demand.locationVillersBas == "Non" %}
                        <option>Oui</option>
                        <option selected="selected">Non</option>
                      {%endif%}
                    </select>
                    <p class="help-block">{{ form_errors(form.locationVillersBas) }}</p>
              </div>

              <div class="form-group">
                    <label for="demand_locationClairlieu">Localisation à Clairlieu: </label>
                    <select class="form-control" id="demand_locationClairlieu" type="text" required="required" name="demand[locationClairlieu]">
                      {% if demand.locationClairlieu == "Oui" %}
                        <option selected="selected">Oui</option>
                        <option>Non</option>
                      {%endif%}
                      {% if demand.locationClairlieu == "Non" %}
                        <option>Oui</option>
                        <option selected="selected">Non</option>
                      {%endif%}
                    </select>
                    <p class="help-block">{{ form_errors(form.locationClairlieu) }}</p>
              </div>

              <div class="form-group">
                    <label for="demand_type1">Type: </label>
                    <select class="form-control" id="demand_type1" type="text" required="required" name="demand[type1]">
                      {% if demand.type1 == "F1" %}
                        <option selected="selected">F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type1 == "F1 bis" %}
                        <option>F1</option>
                        <option selected="selected">F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type1 == "F2" %}
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option selected="selected">F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type1 == "F3" %}
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option selected="selected">F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type1 == "F4" %}
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option selected="selected">F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type1 == "F5" %}
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option selected="selected">F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type1 == "F6" %}
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option selected="selected">F6</option>
                      {%endif%}
                    </select>
                    <p class="help-block">{{ form_errors(form.type1) }}</p>
                </div>

                <div class="form-group">
                    <label for="demand_type2">Autre type: </label>
                    <select class="form-control" id="demand_type2" type="text" required="required" name="demand[type2]">
                      {% if demand.type2 == "Non" %}
                        <option selected="selected">Non</option>
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type2 == "F1" %}
                        <option>Non</option>
                        <option selected="selected">F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type2 == "F1 bis" %}
                        <option>Non</option>
                        <option>F1</option>
                        <option selected="selected">F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type2 == "F2" %}
                        <option>Non</option>
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option selected="selected">F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type2 == "F3" %}
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option selected="selected">F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type2 == "F4" %}
                        <option>Non</option>
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option selected="selected">F4</option>
                        <option>F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type2 == "F5" %}
                        <option>Non</option>
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option selected="selected">F5</option>
                        <option>F6</option>
                      {%endif%}
                      {% if demand.type2 == "F6" %}
                        <option>Non</option>
                        <option>F1</option>
                        <option>F1 bis</option>
                        <option>F2</option>
                        <option>F3</option>
                        <option>F4</option>
                        <option>F5</option>
                        <option selected="selected">F6</option>
                      {%endif%}
                    </select>
                    <p class="help-block">{{ form_errors(form.type2) }}</p>
                </div>

                {% if demand.note == "Rien"%}
                <div class="form-group">
                <label for="demand_note">Notes: </label>
                    <textarea id="demand_note" name="demand[note]"maxlength="200" class="form-control" rows="3"></textarea>
                    <p class="help-block">Maximum 200 caractères. Non communiqué au demandeur.</p>
                </div>
                {% else %}
                <div class="form-group">
                <label for="demand_note">Notes: </label>
                    <textarea id="demand_note" name="demand[note]"maxlength="200" class="form-control" rows="3">{{demand.note}}
                    </textarea>
                    <p class="help-block">Maximum 200 caractères. Non communiqué au demandeur.</p>
                </div>
                {%endif%}

                {{ form_widget(form._token) }}
              <input type="submit" class="btn btn-success" value="Valider" style="margin-bottom: 50px; margin-top: 20px" />
            </form>
          </div>
        </div>
    </div>

</body>
